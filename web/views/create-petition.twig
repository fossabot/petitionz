				<div class="row">
					<div class="col-xs-12">
						<h1 class="h1 section-heading section-heading-white">Create a Petition</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
  <span class="alert alert-warning" hidden id="form-error" style="margin: 10px;font-size: 10px;padding: 10px;"></span>
	<form action="#" id="createpetitionform" class="petition-form" method="POST">
		<div class="petition-entry-details">
			<div class="container">
				<div class="row">
					<div class="col-xs-12 col-md-10 col-md-offset-1">
						<div class="create_petition_section petition-basic" id="petition-basic">
							<h3>The Petition</h3>
							<div class="form-group">
								<input type="text" required="required" data-rule-minlength="20" placeholder="Petition Title" id="petition-title"
										class="form-control half" name="petition-title" />
							</div>
							<div class="form-group">
								<input type="text" required="required"  placeholder="Signature Target" id="target"
										class="form-control half" name="target" />
							</div>
							<div class="form-group">
                                <textarea class="form-control" required data-rule-minlength="100" name="petition-description" id="petition-details"
		                                cols="30" rows="8"
		                                placeholder="Write about the petition in details"></textarea>
							</div>
						</div>
					
							<div class="form-group">
									<input type="text" required="required" placeholder="Petition Banner" id="petition-banner"
										class="form-control half" name="petition-banner" />
							</div>
							
							<div class="form-group">
									<textarea class="form-control" name="photo-description" id="photo-description"
											  cols="30" rows="6"
											  placeholder="Write details about the photos"></textarea>
							</div>

							<div class="form-group">
									<input type="text" required="required" placeholder="Petition Photo" id="petition-photo"
										class="form-control half" name="petition-photo" />
							</div>
						
						</div>
				<div class="col-xs-12 col-md-10 col-md-offset-1">
					<div class="create_petition_section petition-letters" id="petition-letters">
						<h3>The Letter</h3>
						<div class="form-group">
                            <textarea class="form-control" name="petition-letter" id="petition-letter"
								cols="30" rows="6"  placeholder="Write a letter with this petition"></textarea>
							</div>
							<div id="petition-letters-blocks" data-count="1">
								<div class="petition-letter-person">
									<a href="#" class="delete-petition-letter-drag" aria-label="Drag"><i class="fa fa-bars" aria-hidden="true"></i></a>
									<a href="#" class="delete-petition-letter" aria-label="Close"><i class="fa fa-times-circle-o" aria-hidden="true"></i></a>
									<div class="form-group">
										<input type="text" required="required" placeholder="Recipient"
											   id="petition-recipient-name" class="form-control half" name="petition-recipient-name" />
									</div>
									<div class="form-group">
										<input type="text" required="required" placeholder="Recipient's Designation"
											   id="petition-recipient-designation" class="form-control half"
											   name="petition-recipient-designation" />
									</div>
								</div>

							</div>
						</div>
					 </div>
						<div class="create_petition_section create_petition_form_action" id="create_petition_form_action">
							<p class="text-center">
								<button type="submit" class="btn btn-brand btn-cta" id="createpetitionBtn"> Create
								</button>
							</p>
						</div>

					</div>
				</div>
			</div>
		</div>
	</form>
{% endblock %}

{% block scripts %}

<script>

$('#createpetitionform').submit(function(event){
    event.preventDefault();
	console.log($('#createpetitionform').serialize());

    $.ajax({
        url : '/post-petition',
        method : 'POST',
        data : $('#createpetitionform').serialize(),
        success : function(data){
            console.log(data);
            alert('Petition Created Sucessfully!!!.');
            window.location.replace('/');
        },
		error : function(err){
            console.log(err.responseText);
            $('#form-error').show();
            $('#form-error').text(err.responseText);
        }
    })
})
</script>



{% endblock %}